<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#112B38">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/main_content_ll"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/home_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="false"
                android:clipChildren="false">

            <ImageView

                android:layout_width="fill_parent"
                android:layout_height="200.0dip"
                android:layout_marginLeft="24.0dip"
                android:layout_marginTop="24.0dip"
                android:layout_marginRight="24.0dip"
                android:layout_marginBottom="36.0dip"
                android:adjustViewBounds="false"
                android:alpha="0.8"
                android:clipChildren="false"
                android:src="@drawable/usa_f16"
                android:clipToOutline="true"
                android:cropToPadding="false"
                android:elevation="10.0dip"
                android:scaleType="centerCrop" />
            </FrameLayout>

            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_pic"
                android:layout_alignParentStart="true"
                android:background="#112B38"
                android:elevation="20.0dip"
                android:clipChildren="false"
                app:tabContentStart="24dp"
                app:tabGravity="start"
                android:layout_marginTop="-16dp"
                app:tabIconTint="#fafafa"
                app:tabMode="scrollable"
                app:tabPaddingEnd="16dp"
                app:tabPaddingStart="16dp"
                app:tabRippleColor="@color/black_40"
                app:tabSelectedTextAppearance="?attr/textAppearanceCaption"
                app:tabTextColor="#fafafa">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/usa"
                    android:text="USA"
                    app:tabIconTint="#505050" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/germany"
                    android:text="Germany"
                    app:tabIconTint="#fafafa" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ussr_flag"
                    android:text="USSR"
                    app:tabIconTint="#505050" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/usa"
                    android:text="Britain"
                    app:tabIconTint="#505050" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/germany"
                    android:text="Japan"
                    app:tabIconTint="#505050" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/usa"
                    android:text="China"
                    app:tabIconTint="#505050" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/germany"
                    android:text="Italy"
                    app:tabIconTint="#505050" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/usa"
                    android:text="France"
                    app:tabIconTint="#505050" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/germany"
                    android:text="Sweden"
                    app:tabIconTint="#505050" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/usa"
                    android:text="Israel"
                    app:tabIconTint="#505050" />

            </com.google.android.material.tabs.TabLayout>

            <!-- <ListView android:id="@+id/list" android:layout_width="fill_parent" android:layout_height="800dp" android:background="#fafafa" android:clickable="true" android:dividerHeight="1dp" android:footerDividersEnabled="false" android:headerDividersEnabled="false"> </ListView> -->

            <com.kyler.mland.egg.ui.MLandTextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="200dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textAlignment="center"
                android:textColor="#10101c"
                android:textSize="16sp"
                customfontdemo:fontName="ProductSans-Regular.ttf" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/md_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false">

        <include layout="@layout/toolbar_actionbar_transparent" />


    </RelativeLayout>

    <include layout="@layout/mland_base" />
</androidx.drawerlayout.widget.DrawerLayout>
