<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/system_neutral1_600">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/home_pic"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/fighter_jet_top_view" />

        <RelativeLayout
            android:id="@+id/main_content_ll"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="150.0dip"
                android:clipToPadding="false"
                android:elevation="8.0dip"
                android:fitsSystemWindows="true">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:visibility="invisible"
                    android:layout_below="@id/main_content_ll"
                    android:background="@drawable/fighter_jet_top_view"
                    android:scaleType="centerInside" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">


                </RelativeLayout>

            </RelativeLayout>

            <com.google.samples.apps.iosched.ui.widget.ObservableScrollView
                android:id="@+id/scroll_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/main_content_ll"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#30ffffff"
                android:overScrollMode="never">

                <FrameLayout
                    android:id="@+id/scroll_view_child"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ListView
                        android:id="@+id/list"
                        android:layout_width="fill_parent"
                        android:layout_height="800dp"
                        android:background="#fafafa"
                        android:clickable="true"
                        android:dividerHeight="1dp"
                        android:footerDividersEnabled="false"
                        android:headerDividersEnabled="false">

                    </ListView>

                    <com.kyler.mland.egg.ui.MLandTextView
                        android:id="@+id/result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="200dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textAlignment="center"
                        android:textColor="#10101c"
                        android:textSize="16sp"
                        customfontdemo:fontName="ProductSans-Regular.ttf" />

                </FrameLayout>

            </com.google.samples.apps.iosched.ui.widget.ObservableScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <WebView
                android:id="@+id/webView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/md_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false">

        <include layout="@layout/toolbar_actionbar_transparent" />


    </RelativeLayout>

    <include layout="@layout/mland_base" />
</androidx.drawerlayout.widget.DrawerLayout>
