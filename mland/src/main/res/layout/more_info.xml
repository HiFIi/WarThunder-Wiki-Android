<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="false"
app:appInsetForeground="@android:color/transparent">

<com.kyler.mland.egg.ui.ObservableScrollView
    android:id="@+id/moreInfoOSV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="false"
    android:foreground="?android:attr/selectableItemBackground"
    app:appInsetForeground="@android:color/transparent">

    <FrameLayout
        android:id="@+id/session_photo_containerTwo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/wt_blue">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:background="@color/wt_blue"
                android:layout_width="match_parent"
                app:liftOnScroll="true"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsingToolbarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/wt_blue"
                    app:layout_scrollEffect="compress"
                    app:contentScrim="@color/black_40"
                    app:layout_scrollFlags="scroll">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/plane_tabs2"
                        android:layout_width="match_parent"
                        android:layout_height="85.0dip"
                        android:background="@color/black_40"
                        android:backgroundTintMode="src_atop"
                        android:backgroundTint="#54000000"
                        android:clickable="true"
                        android:elevation="36.0dip"
                        android:tintMode="src_atop"
                        app:tabIconTint="#fafafa"
                        app:tabIconTintMode="multiply"
                        app:tabIndicatorColor="#FAFAFA"
                        app:tabMode="scrollable"
                        app:tabRippleColor="@color/black_40"
                        android:layout_gravity="bottom"
                        app:tabSelectedTextAppearance="?attr/textAppearanceCaption"
                        app:tabTextColor="@android:color/white"
                        app:tint="#40000000">

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:icon="@drawable/usa_flag"
                            android:text="@string/country_usa"
                            customfontdemo:tabIconTint="@android:color/white" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:icon="@drawable/germany_flag"
                            android:text="@string/country_germany"
                            customfontdemo:tabIconTint="#fafafa" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:icon="@drawable/ussr_flag"
                            android:text="@string/country_ussr"
                            customfontdemo:tabIconTint="@android:color/white" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:icon="@drawable/britain_flag"
                            android:text="@string/country_britain"
                            customfontdemo:tabIconTint="@android:color/white" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:icon="@drawable/japan_flag"
                            android:text="@string/country_japan"
                            customfontdemo:tabIconTint="@android:color/white" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:icon="@drawable/china_flag"
                            android:text="@string/country_china"
                            customfontdemo:tabIconTint="@android:color/white" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:icon="@drawable/italy_flag"
                            android:text="@string/country_italy"
                            customfontdemo:tabIconTint="@android:color/white" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:icon="@drawable/france_flag"
                            android:text="@string/country_france"
                            customfontdemo:tabIconTint="@android:color/white" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:icon="@drawable/sweden_flag"
                            android:text="@string/country_sweden"
                            customfontdemo:tabIconTint="@android:color/white" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:icon="@drawable/israel_flag"
                            android:text="@string/country_israel"
                            customfontdemo:tabIconTint="@android:color/white" />

                    </com.google.android.material.tabs.TabLayout>

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/ivParallax"
                        android:layout_width="match_parent"
                        android:layout_height="240.0dip"
                        android:scaleType="centerCrop"
                        android:paddingLeft="-100dp"
                        android:paddingRight="-100dp"
                        android:elevation="24dp"
                        android:alpha="0.55"
                        android:src="@drawable/war_thunder_home_image_one"
                        android:tintMode="src_atop"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.45" />

                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/wt_blue"
                android:elevation="16dp"
                android:fillViewport="true"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/your_placeholder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </FrameLayout>
</com.kyler.mland.egg.ui.ObservableScrollView>

<RelativeLayout
    android:id="@+id/md_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="false">

    <include layout="@layout/toolbar_actionbar_transparent" />

</RelativeLayout>

<include layout="@layout/mland_base" />
</androidx.drawerlayout.widget.DrawerLayout>
