<resources>

    <style name="Theme.Drawertest" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.Drawertest.NoActionBar" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="colorSecondary">#88FFFFFF</item>
        <item name="colorSurface">#67ffffff</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorSecondary">@color/pretty_indigo</item>
        <item name="colorSurface">#fafafa</item>
        <item name="colorOnSurfaceVariant">@color/pretty_indigo</item>
    </style>

    <style name="Theme.Drawertest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Drawertest.PopupOverlay" parent="Theme.Material3.DynamicColors.DayNight" />

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ThemeOverlay.Material3.Catalog.Toolbar.Contextual" parent="">
        <item name="colorControlNormal">#FAFAFA</item>
    </style>

    <style name="TextAppearance.Material3.Catalog.Toolbar.Contextual.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">#16161c</item>
        <item name="android:textSize">@dimen/m3_toolbar_text_size_title</item>
        <item name="android:textColorHint">#505050</item>
    </style>

    <style name="TextAppearance.Material3.SearchBar" parent="Base.TextAppearance.Material3.Search">
        <item name="android:textAppearance">@style/TextAppearance.Material3.SearchView</item>
        <item name="android:textColor">#373838</item>
        <item name="android:textColorHint">#505858</item>
    </style>

    <style name="TextAppearance.Material3.SearchView" parent="Base.TextAppearance.Material3.Search">
        <item name="enforceMaterialTheme">true</item>
        <item name="android:textColor">#363838</item>
        <item name="android:textColorHint">#505858</item>


    </style>

</resources>